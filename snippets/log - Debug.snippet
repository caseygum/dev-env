<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Log - Debug</Title>
			<Shortcut>logd</Shortcut>
			<Description>Create a debug level log entry.</Description>
			<Author>Adam Turner</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>message</ID>
					<ToolTip>The message to log</ToolTip>
					<Default>message</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[if (Log.IsDebugEnabled) Log.Debug("$message$"$end$);]]></Code>
		</Snippet>
	</CodeSnippet>
  <CodeSnippet Format="1.0.0">
		<Header>
			<Title>Log - Debug Exception</Title>
			<Shortcut>logd</Shortcut>
			<Description>Create a debug level log entry.</Description>
			<Author>Adam Turner</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>message</ID>
					<ToolTip>The message to log</ToolTip>
					<Default>message</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[if (Log.IsDebugEnabled) Log.DebugException("$message$", ex);$end$]]></Code>
		</Snippet>
	</CodeSnippet>
  <CodeSnippet Format="1.0.0">
		<Header>
			<Title>Log - Debug Exception Formatted</Title>
			<Shortcut>logd</Shortcut>
			<Description>Create a debug level log entry.</Description>
			<Author>Adam Turner</Author>
			<SnippetTypes>
				<SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
				<Literal>
					<ID>message</ID>
					<ToolTip>The message to log</ToolTip>
					<Default>message</Default>
				</Literal>
			</Declarations>
			<Code Language="csharp"><![CDATA[if (Log.IsDebugEnabled) Log.DebugException(String.Format("$message$"$end$), ex);]]></Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
